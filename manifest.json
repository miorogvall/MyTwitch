{
  "manifest_version": 2,
  "name": "MyTwitch",
  "version": "0.5",
  "options_page": "options.html",
  "content_scripts": [
  {
    "matches": [
      "<all_urls>"
    ],
    "js": ["js/jquery-3.2.1.min.js"]
  }
],
"browser_action": {
  "default_icon": "images/icon16.png",
  "default_popup": "popup.html"
},
"background": {
  "scripts": ["js/jquery-3.2.1.min.js", "background.js"],
    "persistent": true
},
"permissions": ["storage", "notifications", "tabs"],

"icons": { "16": "images/icon16.png",
           "48": "images/icon48.png",
          "128": "images/icon128.png" },
"description": "MyTwitch helps you keep track of live streams of channels that you follow. Just type your user name and get started."

}
